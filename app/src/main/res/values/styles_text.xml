<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" />

    <style name="TextView.BaseWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.ShareDialogItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/share_dialog_item_margin</item>
        <item name="android:layout_marginTop">@dimen/share_dialog_item_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ShareDialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/title_share_dialog</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/share_title_textsize</item>
    </style>

</resources>